{   
    "builders": [
        {
            "server_name": "jmt-temporary-build-test",
            "image_name": "jmt-image-test",
            "snapshot_name": "jmt-snapshot-test",
            "type": "scaleway",
            "image": "debian_bullseye",
            "zone": "fr-par-1",
            "commercial_type": "{{user `SCALEWAY_INSTANCE_TYPE`}}",
            "ssh_private_key_file": "/app/.ssh/id_ed25519",
            "ssh_username": "root",
            "remove_volume": true
        }
    ],
    "provisioners": [
        {
            "type": "file",
            "source": "/app/install.sh",
            "destination": "/tmp/install.sh"
        },
        {
            "type": "file",
            "source": "/docker",
            "destination": "/root/docker"
        },
        {
            "type": "shell",
            "inline": [
                "/tmp/install.sh"
            ]
        }
    ]
}